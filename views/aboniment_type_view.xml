<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="view_aboniment_type_tree" model="ir.ui.view">
		<field name="name">Aboniment Tree</field>
		<field name="model">golden_ball.aboniment_type_model</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
			</tree>
		</field>
	</record>

	<record id="view_aboniment_type_form" model="ir.ui.view">
		<field name="name">Aboniment Form</field>
		<field name="model">golden_ball.aboniment_type_model</field>
		<field name="arch" type="xml">
			<form>
				<field name="name"/>
				<field name="number_visits"/>
			</form>
		</field>
	</record>


	<record model="ir.actions.act_window" id="action_aboniment_type">
		<field name="name">Виды абониментов</field>
		<field name="res_model">golden_ball.aboniment_type_model</field>
		<field name="view_mode">tree,form</field>
	</record>

</odoo>